<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="-125dp"
                android:gravity="center"
        >

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/task1Title"
                    android:text="Task 1"
                    style="@style/TitleStyle"
            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="16dp"
            >
                <TextView
                        android:id="@+id/field1Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="h^p"
                        style="@style/InputTitleStyle"
                />
                <EditText
                        android:id="@+id/number_1_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="text"
                        style="@style/InputFieldStyle"
                />
            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="16dp"

            >
                <TextView
                        android:id="@+id/field2Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C"
                        style="@style/InputTitleStyle"
                />
                <EditText
                        android:id="@+id/number_2_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="text"
                        style="@style/InputFieldStyle"
                />
            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="16dp"

            >
                <TextView
                        android:id="@+id/field3Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="s^p"
                        style="@style/InputTitleStyle"
                />


                <EditText
                        android:id="@+id/number_3_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="text"
                        style="@style/InputFieldStyle"
                />
            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="16dp"

            >
                <TextView
                        android:id="@+id/field4Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="n^p"
                        style="@style/InputTitleStyle"
                />


                <EditText
                        android:id="@+id/number_4_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="text"
                        style="@style/InputFieldStyle"
                />
            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="16dp"

            >
                <TextView
                        android:id="@+id/field5Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="o^p"
                        style="@style/InputTitleStyle"
                />


                <EditText
                        android:id="@+id/number_5_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="text"
                        style="@style/InputFieldStyle"
                />
            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="16dp"

            >
                <TextView
                        android:id="@+id/field6Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="W"
                        style="@style/InputTitleStyle"
                />


                <EditText
                        android:id="@+id/number_6_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="text"
                        style="@style/InputFieldStyle"
                />
            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="16dp"

            >
                <TextView
                        android:id="@+id/field7Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="a^p"
                        style="@style/InputTitleStyle"
                />
                <EditText
                        android:id="@+id/number_7_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="text"
                        style="@style/InputFieldStyle"
                />
            </LinearLayout>


            <TextView
                    android:id="@+id/resultLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Result: "
                    style="@style/InputTitleStyle"
            />
            <TextView
                    android:id="@+id/result_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
            />


            <Button
                    android:id="@+id/result_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sum"/>

            <Button
                    android:id="@+id/back_button_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>